{
  "name": "hometrack-hapi",
  "version": "1.0.0",
  "description": "MircoService to filter JSON request based on type",
  "main": "server.js",
  "scripts": {
    "start": "node ./src/server.js",
    "debug": "nodemon --inspect --debug=5000 ./src/server.js",
    "test": "npm run test:unit",
    "test:unit": "mocha test/**/*.spec.js --check-leaks --exit",
    "test:coverage": "nyc mocha test/**/*.spec.js --exit"
  },
  "dependencies": {
    "chairo": "3.0.0",
    "confidence": "3.0.2",
    "boom": "6.0.0",
    "dotenv": "^5.0.0",
    "glue": "4.2.0",
    "good": "7.3.0",
    "good-console": "6.4.0",
    "good-squeeze": "5.0.2",
    "hapi": "16.2.0",
    "hapi-swagger": "8.0.0",
    "inert": "4.2.1",
    "joi": "13.0.1",
    "vision": "4.1.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.18.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^5.0.1",
    "nodemon": "^1.15.0",
    "nyc": "^11.4.1"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.js",
      "src/routes/*.js",
      "src/server.js"
    ],
    "reporter": [
      "lcov",
      "text-summary",
      "json",
      "html"
    ]
  },
  "directories": {
    "test": "coverage"
  },
  "keywords": [
    "filter",
    "Json",
    "service"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sekhar-shashi/workflowFilter.git"
  },
  "author": "shashi sekhar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sekhar-shashi/workflowFilter/issues"
  },
  "homepage": "https://github.com/sekhar-shashi/workflowFilter#readme"
}
